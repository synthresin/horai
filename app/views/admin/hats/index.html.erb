<h1>모자</h1>
<div class="row">
	<% @hats.each do |hat| %>
		<div class="col-sm-3">
	    <div class="thumbnail">
	    	<%= link_to edit_admin_hat_path(hat) do %>
	    		<%= image_tag hat.photo.url(:thumb), class: 'img-responsive' %>
	    	<% end %>
	      
	      <div class="caption">
	        <h3><%= link_to hat.name, edit_admin_hat_path(hat) %></h3>
	        <p>
	        	<%= link_to '삭제', admin_hat_path(hat), data: {method: 'delete', confirm: '정말로 모자를 삭제하시겠어요?' }, class: 'btn btn-danger' %>
	        </p>
	      </div>
	    </div>
	  </div>
	<% end %>
</div>
<hr>
<%= link_to '새 모자', new_admin_hat_path, class: 'btn btn-primary' %>