<%= render 'flash', model: @hat %>
<%= form_for([:admin,@hat]) do |f| %>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="form-group">
        <%= f.label :name, '모자의 이름' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :photo, '섬네일 사진' %>
        <%= f.file_field :photo %>
        <p class="help-block">정사각형의 그림파일을 올려주세요. 그래야 구도가 안틀어져요.</p>
        <%= image_tag @hat.photo_url, class: 'img-responsive' if @hat.photo.presence %><br/>
        <%= f.hidden_field :photo_cache %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="form-group">
        <%= f.label :description, '모자의 설명' %>
        <%= f.text_area :description, class: 'form-control', rows: 15 %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-12">
      <hr>
      <div class="form-group">
        <%= f.submit '확인', class: 'btn btn-primary' %>
        <%= link_to '돌아가기', admin_hats_path, class: 'btn btn-default pull-right' %>
      </div>
    </div>
  </div>
<% end %>
