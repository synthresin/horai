<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
  <title>HORAI, HORAI</title>
  <%= stylesheet_link_tag    'admin', media: 'all' %>
  <%= javascript_include_tag 'admin' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">HORAI, HORAI</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <li><%= link_to '인트로', edit_admin_intro_path %></li>
          <li><%= link_to '회사소개', edit_admin_about_path %></li>
          <li><%= link_to '빌보드', admin_billboards_path %></li>
          <li><%= link_to '뉴스', admin_posts_path %></li>
          <li><%= link_to '아티스트', admin_artists_path %></li>
          <li><%= link_to '스케쥴', admin_schedules_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">SNS <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'SNS 계정 관리', admin_sns_sources_path %></li>
              <li><%= link_to 'SNS 게시물 관리', admin_sns_posts_path %></li>
            </ul>
          </li>
          <li><%= link_to '오디션', admin_auditions_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <li><%= link_to '로그아웃', destroy_user_session_path, :method => 'delete' %></li>
        </ul>
      <% end %>
    </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div class="container-fluid">
  <% if notice.presence %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= notice %>
    </div>
  <% end %>
  <% if alert.presence %>
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= alert %>
    </div>
  <% end %>
  
  <%= yield %>
</div>

</body>
</html>
